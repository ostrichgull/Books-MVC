@model Books.Models.Person

<br />

<div class="form-horizontal table-bordered img-rounded">
    <h4><span class="header-books">Are you sure you want to delete this?</span></h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            &nbsp;
        </dt>
        <dd>
            &nbsp;
        </dd>

        <dt>
            Address
        </dt>
            
        <dd>
            @Html.DisplayFor(model => model.StreetName) @Html.DisplayFor(model => model.Number) @Html.DisplayFor(model => model.Extension)
            <br />
            @Html.DisplayFor(model => model.CityAddress.Name), @Html.DisplayFor(model => model.CityAddress.State.Name)
            <br />
            @Html.DisplayFor(model => model.CityAddress.State.Country.Name)
        </dd>

        <dt>
            &nbsp;
        </dt>
        <dd>
            &nbsp;
        </dd>

        <dt>
            Telephone Number
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phone)            
        </dd>

        <dt>
            &nbsp;
        </dt>
        <dd>
            &nbsp;
        </dd>

        <dt>
            Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        
    </dl>

    @using (Html.BeginForm("Delete", "Persons", FormMethod.Post, new { typeId = Model.PersonTypeID, id = Model.ID }))
    {
        @Html.AntiForgeryToken()

        <p>
            <span class="header-books">
                <input type="submit" value="Delete" class="btn btn-default" />
            </span>
        </p>

    }
</div>

<div class="footer-books">
    @Html.ActionLink("Back to List", "Index")
</div>
